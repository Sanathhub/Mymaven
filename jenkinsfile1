pipeline
{  agent any
   stages()
   {  
      stage('ContDownload')
      {  
         steps()
         {
           try
           {
             git 'https://github.com/Sanathhub/Mymaven.git'
           }
           catch(Exception e1)
           {
             mail bcc: '', body: 'Please verify the code as it is failed to download.', cc: '', from: '', replyTo: '', subject: 'Code Download is failed', to: 'sanathvepur@gmail.com'
           }
         }
      }
      stage('ContBuild')
      {  
         steps()
         {
           sh 'mvn package'
         }
      }
   }
}
 
